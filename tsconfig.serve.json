{
  "compilerOptions": {
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES6",
    "watch": false,
    "lib": [
      "es2018",
      "dom"
    ],
  },
  "files": [
    "main.ts",
    "preload.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
